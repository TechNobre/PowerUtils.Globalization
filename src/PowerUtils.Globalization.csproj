<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <ProjectGuid>836c5ff1-0f2c-436c-9c7c-90af12bbc322</ProjectGuid>

    <TargetFrameworks>net8.0;net7.0;net6.0;net5.0;netcoreapp3.1;netstandard2.1;net48;net462</TargetFrameworks>

    <RootNamespace>PowerUtils.Globalization</RootNamespace>
    <AssemblyName>PowerUtils.Globalization</AssemblyName>

    <Version>1.3.0</Version>

    <PackageOutputPath>bin\</PackageOutputPath>
  </PropertyGroup>


  <!-- Package details -->
  <PropertyGroup>
    <CurrentYear>$([System.DateTime]::UtcNow.ToString(yyyy))</CurrentYear>

    <PackageId>PowerUtils.Globalization</PackageId>
    <title>PowerUtils.Globalization</title>
    <Product>PowerUtils.Globalization</Product>

    <Authors>Nelson Nobre</Authors>
    <Company>TechNobre</Company>

    <License>MIT</License>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <Copyright>Copyright Â© $(CurrentYear) by TechNobre</Copyright>

    <Description>Utils, helpers and extensions to work with globalization</Description>
    <Summary>Utils, helpers and extensions to work with globalization</Summary>
    <PackageTags>PowerUtils;Utils;Helpers;Extensions;Globalization;Countries</PackageTags>
    <PackageProjectUrl>https://github.com/TechNobre/PowerUtils.Globalization</PackageProjectUrl>
    <NeutralLanguage>en-GB</NeutralLanguage>

    <PackageIcon>logo_128x128.png</PackageIcon>
    <PackageReadmeFile>README.nuget.org.md</PackageReadmeFile>

    <RepositoryType>git</RepositoryType>
    <RepositoryUrl>https://github.com/TechNobre/PowerUtils.Globalization</RepositoryUrl>
  </PropertyGroup>


  <!-- Source link -->
  <PropertyGroup>
    <Deterministic>true</Deterministic>
    <EmbedUntrackedSources>true</EmbedUntrackedSources>
    <ContinuousIntegrationBuild Condition="'$(GITHUB_ACTIONS)' == 'true'">true</ContinuousIntegrationBuild>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <IncludeSymbols Condition=" '$(DebugType)' != 'embedded' ">true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
  </PropertyGroup>


  <!-- DOCUMENTATION -->
  <PropertyGroup>
    <DocumentationFile>bin\PowerUtils.Globalization.xml</DocumentationFile>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <NoWarn>$(NoWarn);1591</NoWarn> <!-- Prevent XML documentation warnings -->
  </PropertyGroup>


  <!-- Tests -->
  <ItemGroup>
    <AssemblyAttribute Include="System.Runtime.CompilerServices.InternalsVisibleTo">
      <_Parameter1>$(AssemblyName).Tests</_Parameter1>
    </AssemblyAttribute>
  </ItemGroup>


  <ItemGroup Condition="'$(Configuration)'=='Release'">
    <None Include="..\assets\logo\logo_128x128.png" Pack="true" PackagePath="" />
    <None Include="..\LICENSE" Pack="true" PackagePath="" />
    <None Include="..\README.nuget.org.md" Pack="true" PackagePath="" />
  </ItemGroup>


  <ItemGroup>
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="8.0.0">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>


  <ItemGroup>
    <Compile Update="Resources.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>Resources.resx</DependentUpon>
    </Compile>
  </ItemGroup>


  <ItemGroup>
    <EmbeddedResource Update="Resources.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>Resources.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>


</Project>
